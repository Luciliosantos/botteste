# - funcao criar ssh
criarteste() {
    [[ $(grep -wc ${callback_query_from_id} lista) != '0' ]] && {
      ShellBot.sendMessage --chat_id ${callback_query_message_chat_id} \
        --text "âš ğŸ¤¦ï¸ COMPRE 30 DIAS ILIMITADOS PIX ALEATÃ“RIO ğŸ‘‰ a1e9bf80-4261-47e0-ac74-5d4c0d77fbda ğŸ¤¦ğŸ¤·â€â™‚ï¸âš ï¸"
      return 0
    }
    usuario=$(echo teste$(( RANDOM% + 99 )))
    senha=$((RANDOM% + 999999))
    limite='1'
    tempo='2'
    tuserdate=$(date '+%C%y/%m/%d' -d " +1 days")
    useradd -M -N -s /bin/false $usuario -e $tuserdate > /dev/null 2>&1
    (echo "$senha";echo "$senha") | passwd $usuario > /dev/null 2>&1
    echo "$senha" > /etc/SSHPlus/senha/$usuario
    echo "$usuario $limite" >> /root/usuarios.db
    echo "#!/bin/bash
pkill -f "$usuario"
userdel --force $usuario
grep -v ^$usuario[[:space:]] /root/usuarios.db > /tmp/ph ; cat /tmp/ph > /root/usuarios.db
rm /etc/SSHPlus/senha/$usuario > /dev/null 2>&1
rm -rf /etc/SSHPlus/userteste/$usuario.sh" > /etc/SSHPlus/userteste/$usuario.sh
    chmod +x /etc/SSHPlus/userteste/$usuario.sh
    at -f /etc/SSHPlus/userteste/$usuario.sh now + $tempo hour > /dev/null 2>&1
    echo ${callback_query_from_id} >> lista
    # - ENVIA O SSH
    ShellBot.sendMessage --chat_id ${callback_query_message_chat_id} \
    --text "$(echo -e "âœ… <b>ğŸ‘‡OPA LOGIN CRIADO COM SUCESSOğŸ‘‡</b> âœ…\n\nUSUARIO: <code>$usuario</code>\nSENHA: <code>$senha</code>\n\nâ³ Expira em: $tempo Hora
    
â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸
        ğŸ’ COMO SE CONECTARğŸ’ 
â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–ªï¸â–«ï¸â–«ï¸â–ªï¸â–ªï¸
ğŸŸ¢ 1Âª BAIXE O APP CLICANDO NO BOTÃƒO
 ğŸ“¥BAIXAR APLICATIVO ğŸ“¥
 
ğŸŸ¢ 2Âª APÃ“S BAIXAR, ABRA O APP COLOQUE SEU LOGIN NA PARTE DE USUARIO DEPOIS
COLOQUE SUA SENHA / SELECIONE SERVIDOR 1/SELECIONE A OPERADORA DO SEU CHIP, E CLIQUE EM (CONECTAR)

â€¼ï¸ATENÃ‡ÃƒO OS DADOS MOVEL DEVE ESTA ATIVO COM H+ Ou 4Gâ€¼ï¸

ğŸ˜APROVEITE SEU TESTE GRÃTIS")" \
    --parse_mode html
    return 0
}

#enviar app
enviarapp() {
    ShellBot.answerCallbackQuery --callback_query_id ${callback_query_id[$id]} \
        --text "â™»ï¸ ENVIANDO APLICATIVO, AGUARDE..."
    ShellBot.sendDocument --chat_id ${callback_query_message_chat_id} \
        --document "@/root/app.apk" \
    return 0


    }
    
